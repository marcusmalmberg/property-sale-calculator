# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**.bat]
end_of_line = crlf

[**.{rb,js,jsx,scss,css,erb,haml}]
indent_style = space
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2

[**.md]
max_line_length = 0
trim_trailing_whitespace = false
